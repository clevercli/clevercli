{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "types": [
      "vitest/importMeta"
    ],
    "target": "es2022",
    "lib": [
      "es2022"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true
  }
}
